
location = / {
    return 301 https://browseraudit.com$request_uri;
}

location = /test {
    return 301 https://browseraudit.com$request_uri;
}

location ^~ /static {
    root /srv/browseraudit/internal/production/deployments/current;
}

location / {
    proxy_pass http://go_app:8000;

    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-Host $host;

    # csn 2017-05-11: don't allow web crawlers to index any pages
    add_header X-Robots-Tag "none" always;
}
